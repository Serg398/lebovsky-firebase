<mvc:View
    controllerName="sap.ui.demo.basicTemplate.controller.Profile"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page
        id="Profile"
        class="sapUiSizeCompact"
        showHeader="false">
        <tnt:ToolPage
            id="toolPage"
            class="toolHead">
            <tnt:header>
                <tnt:ToolHeader>
                    <Image
                        src='https://firebasestorage.googleapis.com/v0/b/lebovsky-f6643.appspot.com/o/logo%2Fimage%20(17).png?alt=media&amp;token=df1897cd-9088-48e0-ab97-c0f974d83fb3'
                        width="140px" />
                    <Title
                        level="H3"
                        titleStyle="H6"
                        text="">
                        <layoutData>
                            <OverflowToolbarLayoutData shrinkable="true" />
                        </layoutData>
                    </Title>
                    <ToolbarSpacer>
                        <layoutData>
                            <OverflowToolbarLayoutData
                                priority="NeverOverflow"
                                minWidth="20px" />
                        </layoutData>
                    </ToolbarSpacer>
                    <tnt:ToolHeaderUtilitySeparator />
                    <Title
                        text="Баланс: {Table>/generaluser/money} руб."
                        class="balance" />
                    <Title text="{Table>/front/account/data/0/name}" />
                    <Avatar
                        src="{Table>/generaluser/AvatarUrl}"
                        displaySize="XS"
                        backgroundColor="Transparent" />
                </tnt:ToolHeader>
            </tnt:header>
            <tnt:mainContents>
                <IconTabBar>
                    <items>
                        <IconTabFilter
                            key="info"
                            text="Информация">
                            <VBox class="sapUiSmallMargin">
                                <Avatar
                                    src="{Table>/generaluser/AvatarUrl}"
                                    displaySize="L"
                                    displayShape="Circle">
                                    <detailBox>
                                        <LightBox>
                                            <LightBoxItem
                                                imageSrc="{Table>/generaluser/AvatarUrl}"
                                                alt="Michael Adams"
                                                title="{Table>/generaluser/username}"
                                                subtitle="Организация: Lebovsky"></LightBoxItem>
                                        </LightBox>
                                    </detailBox>
                                </Avatar>
                                    <Button
                                        text="Загрузить"
                                        press="uploadAvatar" />
                                    <html:input
                                        id="avatar"
                                        type="file"
                                        accept=".jpg,.jpeg,.png" />
                                <ProgressIndicator
                                    displayAnimation="false"
                                    visible="{Table>/indicator}"
                                    width="20%"
                                    id="Progress"
                                    class="sapUiSmallMarginBottom"
                                    percentValue="0"
                                    displayValue="0%"
                                    showValue="true"
                                    state="Information" />
                                </VBox>
                                <f:Form
                                    id="FormDisplayColumn_oneGroup"
                                    editable="true">
                                    <f:title>
                                        <core:Title text="Общая информация" />
                                    </f:title>
                                    <f:layout>
                                        <f:ColumnLayout />
                                    </f:layout>
                                    <f:formContainers>
                                        <f:FormContainer>
                                            <f:formElements>
                                                <f:FormElement label="Имя">
                                                    <f:fields>
                                                        <Text text="{Table>/generaluser/username}" />
                                                    </f:fields>
                                                </f:FormElement>
                                                <f:FormElement label="Email">
                                                    <f:fields>
                                                        <Text text="{Table>/generaluser/email}" />
                                                    </f:fields>
                                                </f:FormElement>
                                                <f:FormElement label="Город">
                                                    <f:fields>
                                                        <Text text="{Table>/generaluser/city}" />
                                                    </f:fields>
                                                </f:FormElement>
                                            </f:formElements>
                                        </f:FormContainer>
                                    </f:formContainers>
                                </f:Form>
                           
                        </IconTabFilter>
                        <IconTabFilter
                            key="attachments"
                            text="Настройки" >
                            <List headerText="Настройки">
                                <InputListItem label="(Тест) Отображать курс валют в тулбаре:">
                                    <Switch state="true" />
                                </InputListItem>
                            </List>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </tnt:mainContents>
        </tnt:ToolPage>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="Сохранить"
                    press='saveSetting'>
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <Button
                    type="Reject"
                    text="Отмена"
                    press='cancelSetting'>
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>